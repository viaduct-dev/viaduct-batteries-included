"""
Input for creating a new checklist item.
"""
input CreateChecklistItemInput @scope(to: ["default"]) {
  title: String!
  userId: String!
}

"""
Input for updating a checklist item.
"""
input UpdateChecklistItemInput @scope(to: ["default"]) {
  id: ID! @idOf(type: "ChecklistItem")
  completed: Boolean!
}

"""
Input for deleting a checklist item.
"""
input DeleteChecklistItemInput @scope(to: ["default"]) {
  id: ID! @idOf(type: "ChecklistItem")
}

"""
Input for setting a user's admin status.
"""
input SetUserAdminInput @scope(to: ["admin"]) {
  userId: String!
  isAdmin: Boolean!
}

"""
Input for deleting a user.
"""
input DeleteUserInput @scope(to: ["admin"]) {
  userId: String!
}

extend type Mutation @scope(to: ["default"]) {
  """
  Create a new checklist item. Users can create their own items.
  """
  createChecklistItem(input: CreateChecklistItemInput!): ChecklistItem! @resolver

  """
  Update a checklist item's completion status. Users can update their own items.
  """
  updateChecklistItem(input: UpdateChecklistItemInput!): ChecklistItem! @resolver

  """
  Delete a checklist item. Users can delete their own items.
  """
  deleteChecklistItem(input: DeleteChecklistItemInput!): Boolean! @resolver
}

extend type Mutation @scope(to: ["admin"]) {
  """
  Set a user's admin status. Only admins can set admin status.
  """
  setUserAdmin(input: SetUserAdminInput!): Boolean! @resolver

  """
  Delete a user from the system. Only admins can delete users.
  """
  deleteUser(input: DeleteUserInput!): Boolean! @resolver
}
